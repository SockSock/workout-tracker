<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.WorkoutTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary branding color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyleNight</item>
    </style>

    <style name="BottomNavigationViewStyleNight" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/colorBottomNavTextDark</item>
        <item name="itemTextColor">@color/colorBottomNavTextDark</item>
    </style>
</resources>